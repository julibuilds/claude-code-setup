{
  "name": "playground",
  "module": "dist/playground",
  "type": "module",
  "private": true,
  "bin": {
    "playg": "./dist/playground"
  },
  "scripts": {
    "build": "bun build src/index.tsx --compile --outfile dist/playground",
    "dev": "bun run dist/playground",
    "lint": "biome check --write .",
    "check-types": "tsc --noEmit",
    "ci": "biome ci .",
    "link": "chmod +x dist/playground && bun link",
    "setup": "bun install && bun run link",
    "clean": "rm -rf node_modules .turbo dist bun.lock",
    "fresh": "bun run clean && bun install && bun run build && bun run link"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@repo/tui": "*",
    "@types/bun": "^1.3.0",
    "@types/react": "^19.2.2",
    "@types/three": "^0.180.0",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@opentui/core": "^0.1.27",
    "@opentui/react": "^0.1.27",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@tanstack/react-query": "^5.90.3",
    "@tanstack/react-query-persist-client": "^5.90.5",
    "commander": "^14.0.1",
    "execa": "^9.6.0",
    "react": "^19.2.0",
    "shiki": "^3.13.0",
    "three": "^0.180.0",
    "zod": "^4.1.12",
    "zustand": "^5.0.8",
    "zx": "^8.8.4"
  }
}
