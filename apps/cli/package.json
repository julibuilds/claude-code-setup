{
	"name": "router-workers-cli",
	"module": "dist/router-workers-cli",
	"type": "module",
	"private": true,
	"bin": {
		"ccr": "./dist/router-workers-cli"
	},
	"scripts": {
		"build": "bun build src/index.tsx --compile --outfile dist/router-workers-cli",
		"dev": "bun run src/index.tsx",
		"start": "bun run dist/router-workers-cli",
		"lint": "biome check --write .",
		"check-types": "tsc --noEmit",
		"ci": "biome ci .",
		"link": "chmod +x dist/router-workers-cli && bun link && bun run scripts/post-link.ts",
		"setup": "bun install && bun run build && bun run link",
		"clean": "rm -rf node_modules .turbo dist bun.lock",
		"fresh": "bun run clean && bun install && bun run build && bun run link"
	},
	"devDependencies": {
		"@repo/eslint-config": "*",
		"@repo/typescript-config": "*",
		"@repo/tui": "*",
		"@types/bun": "^1.3.0",
		"@types/react": "^19.2.2",
		"eslint": "^9.37.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@opentui/core": "^0.1.27",
		"@opentui/react": "^0.1.27",
		"@tanstack/react-query": "^5.90.5",
		"@tanstack/react-query-persist-client": "^5.90.7",
		"execa": "^9.6.0",
		"react": "^19.2.0",
		"shiki": "^3.13.0",
		"undici": "^7.16.0",
		"zod": "^4.1.12",
		"zustand": "^5.0.8",
		"zx": "^8.8.4"
	}
}
