{
	"name": "router",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/index.ts",
		"wrangler": "bunx wrangler",
		"dev:workers": "wrangler dev",
		"build": "bun build src/index.ts --outdir dist --target bun",
		"build:workers": "bun build src/workers.ts --outdir dist --target browser --format esm",
		"start": "bun dist/index.js",
		"deploy:workers": "wrangler deploy",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.5",
		"@repo/core": "*",
		"hono": "^4.10.0",
		"js-tiktoken": "^1.0.21",
		"pino": "^10.0.0",
		"pino-pretty": "^13.1.2"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251011.0",
		"@types/bun": "^1.3.0",
		"typescript": "^5.9.3",
		"wrangler": "^4.43.0"
	}
}
