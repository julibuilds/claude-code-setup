# Claude Code Router Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3456
HOST=0.0.0.0

# API Key for Router Authentication (optional)
# If not set, router will only bind to localhost for security
APIKEY=your-secret-api-key-here

# API Timeout (milliseconds)
API_TIMEOUT_MS=600000

# Logging Configuration
LOG=true
LOG_LEVEL=info

# Provider API Keys
# OpenRouter (https://openrouter.ai/)
OPENROUTER_API_KEY=your-openrouter-api-key

# DeepSeek (https://platform.deepseek.com/)
DEEPSEEK_API_KEY=your-deepseek-api-key

# Google Gemini (https://ai.google.dev/)
GEMINI_API_KEY=your-gemini-api-key

# Ollama (local installation)
OLLAMA_BASE_URL=http://localhost:11434

# Optional Proxy Configuration
# PROXY_URL=http://proxy.example.com:8080

# Custom Router Script Path (optional)
# CUSTOM_ROUTER_PATH=/path/to/custom-router.js

# Non-Interactive Mode (for automated deployments)
NON_INTERACTIVE_MODE=false
