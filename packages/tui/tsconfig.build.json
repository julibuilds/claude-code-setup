{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		// Override for building
		"noEmit": false,
		"emitDeclarationOnly": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "examples", "**/*.test.ts", "**/*.test.tsx"]
}
